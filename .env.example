# STU Alumni System Environment Configuration
# ===========================================

APP_NAME="STU Alumni Portal"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://alumni.stu.edu.gh

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=stu_alumni
DB_USERNAME=stu_alumni_user
DB_PASSWORD=

# Broadcasting & Queue
BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Redis Configuration (Optional)
# REDIS_HOST=127.0.0.1
# REDIS_PASSWORD=null
# REDIS_PORT=6379

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=mail.stu.edu.gh
MAIL_PORT=587
MAIL_USERNAME=alumni@stu.edu.gh
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="alumni@stu.edu.gh"
MAIL_FROM_NAME="STU Alumni Portal"

# SMS Configuration (Twilio or Local Provider)
SMS_DRIVER=log
TWILIO_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# SIS Integration Configuration
SIS_BASE_URL=https://sis-api.stu.edu.gh
SIS_API_KEY=
SIS_ENABLED=true

# File Upload Configuration
UPLOAD_MAX_FILESIZE=5120
UPLOAD_ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf

# Security Configuration
SESSION_SECURE_COOKIE=true
SANCTUM_STATEFUL_DOMAINS=alumni.stu.edu.gh

# Cache Configuration
CACHE_DURATION=3600

# Features Configuration
FEATURE_BUSINESS_DIRECTORY=true
FEATURE_EVENTS=true
FEATURE_ANNOUNCEMENTS=true
FEATURE_EXECUTIVES=true
FEATURE_SIS_INTEGRATION=true

# Admin Configuration
ADMIN_EMAIL=admin@stu.edu.gh
SUPER_ADMIN_EMAIL=it.directorate@stu.edu.gh
